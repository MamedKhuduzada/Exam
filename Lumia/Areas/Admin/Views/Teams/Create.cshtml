@using Lumia.Models;
@model CreateTeamVM
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create Page</h5>

        <!-- Horizontal Form -->
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Your Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="inputText">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Surname</label>
                <div class="col-sm-10">
                    <input asp-for="Surname" class="form-control" >
                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label  class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" >
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label  class="col-sm-2 col-form-label">Profile Image</label>
                <div class="col-sm-10">
                    <input asp-for="Image" class="form-control" >
                    <span asp-validation-for="Image" class="text-danger"></span>

                </div>
            </div>
            <select class="form-select" aria-label="Default select example" asp-for="JobId">
                @foreach(Job item in Model.Jobs)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span asp-validation-for="JobId" class="text-danger"></span>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>